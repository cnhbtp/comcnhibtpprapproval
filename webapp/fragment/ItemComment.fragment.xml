<core:FragmentDefinition 	
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns="sap.m" >
    <Dialog title ="Comment on Item Purchase Document:" contentWidth="25em" busyIndicatorDelay="0" class="sapUiSizeCompact">
        <VBox class="sapUiSmallMargin">
            <TextArea width="100%" class="sapUiTinyMarginBegin" value="{LocalModel>SapItemComment}" placeholder="Provide additional comments" growing="true" editable="false" />
        </VBox>
        <endButton>
            <Button text="Close" press="onItemCommentClose" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>